<%- include('partials/head') %>
<section class="card">
  <h1>Visualização de Lote (Somente Leitura)</h1>
  <% if (!found) { %>
    <div class="alert warn">QR inválido ou não encontrado.</div>
  <% } else { %>
    <div class="alert">Esta é uma visualização administrativa. Nenhum consumo foi registrado.</div>
  <% } %>
</section>

<% if (found) { %>
  <section class="gradient-card" style="margin-top:12px">
    <div class="inner">
      <h2>Informações do Lote</h2>
      <div class="features">
        <div class="feature"><h3>Lote</h3><p>#<%= info.batch_number %></p></div>
        <div class="feature"><h3>Produtor</h3><p><%= info.producer_name %></p></div>
        <div class="feature"><h3>Validade</h3><p><%= info.expiry_date %></p></div>
        <div class="feature"><h3>Associação</h3><p><%= info.association_name || '-' %></p></div>
        <div class="feature"><h3>Token</h3><p style="word-break:break-all"><%= info.token %></p></div>
        <div class="feature"><h3>Status</h3><p><%= info.status %><% if (info.consumed_at) { %> · <%= info.consumed_at %><% } %></p></div>
      </div>
    </div>
  </section>
<% } %>

<%- include('partials/foot') %>

