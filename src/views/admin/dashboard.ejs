          <svg viewBox="0 0 100 28" preserveAspectRatio="none"><path d="M0 18 L20 10 L40 12 L60 6 L80 12 L100 10" fill="none" stroke="#10b981" stroke-width="2"/></svg>
        </div>
      </div>
      <div class="stat">
        <div class="num"><%= stats.batches %></div>
        <div><%= t('admin.stats.batches') %></div>
        <div class="sparkline">
          <svg viewBox="0 0 100 28" preserveAspectRatio="none"><path d="M0 22 L20 16 L40 20 L60 12 L80 18 L100 8" fill="none" stroke="#22c55e" stroke-width="2"/></svg>
        </div>
      </div>
      <div class="stat">
        <div class="num"><%= stats.qr %></div>
        <div><%= t('admin.stats.qr') %></div>
        <div class="sparkline">
          <svg viewBox="0 0 100 28" preserveAspectRatio="none"><path d="M0 16 L20 8 L40 10 L60 4 L80 10 L100 6" fill="none" stroke="#34d399" stroke-width="2"/></svg>
