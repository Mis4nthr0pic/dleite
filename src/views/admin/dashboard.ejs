    <h1><%= t('admin.dashboard') %></h1>
    <div class="grid">
      <div class="stat">
        <div class="num"><%= stats.associations %></div>
        <div><%= t('admin.stats.associations') %></div>
        <div class="sparkline">
          <svg viewBox="0 0 100 28" preserveAspectRatio="none"><path d="M0 20 L20 12 L40 16 L60 8 L80 14 L100 6" fill="none" stroke="#16a34a" stroke-width="2"/></svg>
        </div>
      </div>
      <div class="stat">
        <div class="num"><%= stats.orders %></div>
        <div><%= t('admin.stats.orders') %></div>
